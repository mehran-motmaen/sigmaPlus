<rule id="3504" owner="system" kbid="3504_1" enable="t" ver="1" file_name="">
        <filter_list>
            <filter id="1" name="Transfer of virus binary file via network detected" weight="10">
                <source>
                    <ip location="ANY" />
                    <port>0-65535</port>
                </source>
                <target>
                    <ip location="ANY" />
                    <port>0-65535</port>
                </target>
                <event_list>
                    <event sensor_type="ANY" class_type="">
                        <tag meaning="mechanism">Virus</tag>
                    </event>
                </event_list>
            </filter>
            <filter id="2" name="AntiMalware detected a virus on SRC_IP" occurrence="1" weight="10" timeout="120">
                <source>
                    <ip reference_id="1" reference_type="source" />
                    <port>0-65535</port>
                </source>
                <target>
                    <ip location="ANY" />
                    <port>0-65535</port>
                </target>
                <event_list>
                    <event sensor_type="308" class_type="">
