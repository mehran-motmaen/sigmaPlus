<rule id="6120" owner="system" kbid="6120_1" enable="t" ver="1" file_name="">
        <filter_list>
            <filter id="1" name="Database Service Failure Detection" weight="20">
                <source>
                    <ip location="ANY" />
                    <port>0-65535</port>
                </source>
                <target>
                    <ip location="ANY" />
                    <port>0-65535</port>
                </target>
                <event_list>
                    <event sensor_type="3">
                        <tag meaning="mechanism">Service Down</tag>
                        <tag meaning="resource">DBMS</tag>
                    </event>
                </event_list>
            </filter>
        </filter_list>
        <action>
            <alert priority="high" category="AvailabilityViolation">
                <message>Database service failure detected</message>
                <source>
                    <ip reference_id="1" reference_type="source" />
                </source>
                <target>
                    <ip reference_id="1" reference_type="target" />
                </target>
            </alert>
            <prerequisite />
            <consequence />
        </action>
        <regulation>
            <sequence>
                <filter id="1" />
            </sequence>
        </regulation>
    </rule>
    