<rule id="3501" owner="system" kbid="3501_1" enable="t" ver="1" file_name="">
        <filter_list>
            <filter id="1" name="Internal hosts try to communicate to a BotServer as a potentialy Botspot" weight="3">
                <source>
                    <ip>$HOME_NET</ip>
                    <port>0-65535</port>
                </source>
                <target>
                    <ip>$EXTERNAL_NET</ip>
                    <port>0-65535</port>
                </target>
                <event_list>
                    <event sensor_type="ANY" class_type="">
                        <tag meaning="mechanism">Botnet</tag>
                    </event>
                </event_list>
            </filter>
            <filter id="2" name="CnC Server response to a potential Botspot" occurrence="1" weight="20" timeout="120">
                <source>
                    <ip reference_id="1" reference_type="target" />
                    <port>0-65535</port>
                </source>
                <target>
                    <ip reference_id="1" reference_type="source" />
                    <port>0-65535</port>
                </target>
                <flag_list>
                    <flag>sticky</flag>
                </flag_list>
                <event_list>
                    <event event_type="ANY" sensor_type="1" class_type="" />
                </event_list>
            </filter>
            <filter id="3" name="Internal hosts try to communicate to a BotServer with multiple IP address as a potentialy Botspot" occurrence="100" weight="1" timeout="3600">
                <source>
                    <ip>$HOME_NET</ip>
                    <port>0-65535</port>
                </source>
                <target>
                    <ip>$EXTERNAL_NET</ip>
                    <port>0-65535</port>
                </target>
                <event_list>
                    <event sensor_type="ANY" class_type="">
                        <tag meaning="mechanism">Botnet</tag>
                    </event>
                </event_list>
                <diversity>
                    <param reference_type="source.ip" />
                </diversity>
            </filter>
            <filter id="4" name="Botnet Server try to communicate to a Botspot client" occurrence="100" weight="1" timeout="3600">
                <source>
                    <ip>$EXTERNAL_NET</ip>
                    <port>0-65535</port>
                </source>
                <target>
                    <ip>$HOME_NET</ip>
                    <port>0-65535</port>
                </target>
                <event_list>
                    <event event_type="ANY" sensor_type="1" class_type="" />
                </event_list>
                <diversity>
                    <param reference_type="target.ip" />
                </diversity>
            </filter>
        </filter_list>
        <action>
            <alert priority="high" category="Botnet">
                <message>potentially Bot clients try to communicate to botnet CnC server</message>
                <source>
                    <ip reference_id="1" reference_type="source" />
                    <ip reference_id="3" reference_type="source" />
                    <ip reference_id="4" reference_type="target" />
                </source>
                <target>
                    <ip reference_id="1" reference_type="target" />
                </target>
                <additional_data meaning="MalwareName" reference_id="1" />
                <additional_data meaning="MalwareName" reference_id="2" />
                <additional_data meaning="MalwareName" reference_id="3" />
                <additional_data meaning="MalwareName" reference_id="4" />
            </alert>
            <prerequisite>
                <predicate type="Infection-Malicious">
                    <param reference_type="source.ip" />
                </predicate>
                <predicate type="Trojan-Host">
                    <param reference_type="source.ip" />
                </predicate>
                <predicate type="Access-Host">
                    <param reference_type="source.ip" />
                </predicate>
                <predicate type="Compromise-Host">
                    <param reference_type="source.ip" />
                </predicate>
                <predicate type="Hopping">
                    <param reference_type="source.ip" />
                </predicate>
            </prerequisite>
            <consequence>
                <predicate type="CnC-Server" timeout="3600">
                    <param reference_type="target.ip" />
                </predicate>
                <predicate type="BotSpot-Host" timeout="3600">
                    <param reference_type="source.ip" />
                </predicate>
                <predicate type="Hopping" timeout="43200">
                    <param reference_type="target.ip" />
                </predicate>
            </consequence>
        </action>
        <regulation>
            <sequence>
                <filter id="1" />
                <filter id="2" />
                <group>
                    <filter id="3" />
                    <filter id="4" />
                </group>
            </sequence>
        </regulation>
    </rule>
    