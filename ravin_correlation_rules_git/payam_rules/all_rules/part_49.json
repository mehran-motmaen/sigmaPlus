{
  "rule": {
    "@id": "3501",
    "@owner": "system",
    "@kbid": "3501_1",
    "@enable": "t",
    "@ver": "1",
    "@file_name": "",
    "filter_list": {
      "filter": [
        {
          "@id": "1",
          "@name": "Internal hosts try to communicate to a BotServer as a potentialy Botspot",
          "@weight": "3",
          "source": {
            "ip": "$HOME_NET",
            "port": "0-65535"
          },
          "target": {
            "ip": "$EXTERNAL_NET",
            "port": "0-65535"
          },
          "event_list": {
            "event": {
              "@sensor_type": "ANY",
              "@class_type": "",
              "tag": {
                "@meaning": "mechanism",
                "#text": "Botnet"
              }
            }
          }
        },
        {
          "@id": "2",
          "@name": "CnC Server response to a potential Botspot",
          "@occurrence": "1",
          "@weight": "20",
          "@timeout": "120",
          "source": {
            "ip": {
              "@reference_id": "1",
              "@reference_type": "target"
            },
            "port": "0-65535"
          },
          "target": {
            "ip": {
              "@reference_id": "1",
              "@reference_type": "source"
            },
            "port": "0-65535"
          },
          "flag_list": {
            "flag": "sticky"
          },
          "event_list": {
            "event": {
              "@event_type": "ANY",
              "@sensor_type": "1",
              "@class_type": ""
            }
          }
        },
        {
          "@id": "3",
          "@name": "Internal hosts try to communicate to a BotServer with multiple IP address as a potentialy Botspot",
          "@occurrence": "100",
          "@weight": "1",
          "@timeout": "3600",
          "source": {
            "ip": "$HOME_NET",
            "port": "0-65535"
          },
          "target": {
            "ip": "$EXTERNAL_NET",
            "port": "0-65535"
          },
          "event_list": {
            "event": {
              "@sensor_type": "ANY",
              "@class_type": "",
              "tag": {
                "@meaning": "mechanism",
                "#text": "Botnet"
              }
            }
          },
          "diversity": {
            "param": {
              "@reference_type": "source.ip"
            }
          }
        },
        {
          "@id": "4",
          "@name": "Botnet Server try to communicate to a Botspot client",
          "@occurrence": "100",
          "@weight": "1",
          "@timeout": "3600",
          "source": {
            "ip": "$EXTERNAL_NET",
            "port": "0-65535"
          },
          "target": {
            "ip": "$HOME_NET",
            "port": "0-65535"
          },
          "event_list": {
            "event": {
              "@event_type": "ANY",
              "@sensor_type": "1",
              "@class_type": ""
            }
          },
          "diversity": {
            "param": {
              "@reference_type": "target.ip"
            }
          }
        }
      ]
    },
    "action": {
      "alert": {
        "@priority": "high",
        "@category": "Botnet",
        "message": "potentially Bot clients try to communicate to botnet CnC server",
        "source": {
          "ip": [
            {
              "@reference_id": "1",
              "@reference_type": "source"
            },
            {
              "@reference_id": "3",
              "@reference_type": "source"
            },
            {
              "@reference_id": "4",
              "@reference_type": "target"
            }
          ]
        },
        "target": {
          "ip": {
            "@reference_id": "1",
            "@reference_type": "target"
          }
        },
        "additional_data": [
          {
            "@meaning": "MalwareName",
            "@reference_id": "1"
          },
          {
            "@meaning": "MalwareName",
            "@reference_id": "2"
          },
          {
            "@meaning": "MalwareName",
            "@reference_id": "3"
          },
          {
            "@meaning": "MalwareName",
            "@reference_id": "4"
          }
        ]
      },
      "prerequisite": {
        "predicate": [
          {
            "@type": "Infection-Malicious",
            "param": {
              "@reference_type": "source.ip"
            }
          },
          {
            "@type": "Trojan-Host",
            "param": {
              "@reference_type": "source.ip"
            }
          },
          {
            "@type": "Access-Host",
            "param": {
              "@reference_type": "source.ip"
            }
          },
          {
            "@type": "Compromise-Host",
            "param": {
              "@reference_type": "source.ip"
            }
          },
          {
            "@type": "Hopping",
            "param": {
              "@reference_type": "source.ip"
            }
          }
        ]
      },
      "consequence": {
        "predicate": [
          {
            "@type": "CnC-Server",
            "@timeout": "3600",
            "param": {
              "@reference_type": "target.ip"
            }
          },
          {
            "@type": "BotSpot-Host",
            "@timeout": "3600",
            "param": {
              "@reference_type": "source.ip"
            }
          },
          {
            "@type": "Hopping",
            "@timeout": "43200",
            "param": {
              "@reference_type": "target.ip"
            }
          }
        ]
      }
    },
    "regulation": {
      "sequence": {
        "filter": [
          {
            "@id": "1"
          },
          {
            "@id": "2"
          }
        ],
        "group": {
          "filter": [
            {
              "@id": "3"
            },
            {
              "@id": "4"
            }
          ]
        }
      }
    }
  }
}