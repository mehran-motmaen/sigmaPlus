                    <param reference_type="target.ip" />
                </predicate>
                <predicate type="Recon-Service">
                    <param reference_type="source.ip" />
                    <param reference_type="target.ip" />
                </predicate>
            </prerequisite>
            <consequence>
                <predicate type="Degrade-Host" timeout="3600">
                    <param reference_type="target.ip" />
                </predicate>
            </consequence>
        </action>
        <regulation>
            <sequence>
