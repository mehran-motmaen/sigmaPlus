<rule kbid="7005_1" id="7005" owner="system" ver="1" enable="t" file_name="">
        <filter_list>
            <filter id="1" name="Fortigate, totalsession threshold exceeded" weight="10">
                <source>
                    <ip location="ANY" />
                    <port>0-65535</port>
                </source>
                <target>
                    <ip location="ANY" />
                    <port>0-65535</port>
                </target>
                <event_list>
                    <event sensor_type="360" event_type="40704" />
                </event_list>
                <additional_data_list>
                    <additional_data meaning="devname" operator="EQ">fortigate-devname</additional_data>
                    <additional_data meaning="totalsession" operator="GT">500000</additional_data>
                </additional_data_list>
            </filter>
        </filter_list>
        <action>
            <alert priority="medium" category="AbnormalActivity">
                <message>Fortigate device, totalsession threshold exceeded</message>
                <source>
                    <ip reference_id="1" reference_type="source" />
                </source>
                <target>
                    <ip reference_id="1" reference_type="target" />
                </target>
            </alert>
        </action>
        <regulation>
            <sequence>
                <filter id="1" />
            </sequence>
        </regulation>
    </rule>
    