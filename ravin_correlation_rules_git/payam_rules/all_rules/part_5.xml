<rule id="10009" owner="system" kbid="10009_1" enable="t" ver="1" file_name="">
        <filter_list>
            <filter id="1" name="Admin configuration failed attempt on Firewall" weight="1">
                <source>
                    <ip location="ANY" />
                    <port>0-65535</port>
                </source>
                <target>
                    <ip location="ANY" />
                    <port>0-65535</port>
                </target>
                <event_list>
                    <event sensor_type="ANY" class_type="">
                        <tag meaning="event_type">Configuration Activity</tag>
                        <tag meaning="resource">Firewall</tag>
                        <tag meaning="result">Failed</tag>
                    </event>
                </event_list>
            </filter>
            <filter id="2" name="Multiple Admin configuration failed attempt on Firewall (5 attempts)" occurrence="3" weight="5" timeout="900">
                <source>
                    <ip reference_id="1" reference_type="source" />
                    <port>0-65535</port>
                </source>
                <target>
                    <ip reference_id="1" reference_type="target" />
                    <port>0-65535</port>
                </target>
                <flag_list>
                    <flag>sticky</flag>
                </flag_list>
                <event_list>
                    <event sensor_type="ANY" class_type="">
                        <tag meaning="event_type">Configuration Activity</tag>
                        <tag meaning="resource">Firewall</tag>
                        <tag meaning="result">Failed</tag>
                    </event>
                </event_list>
            </filter>
        </filter_list>
        <action>
            <alert priority="high" category="AbnormalActivity">
                <message>Multiple administrative configuration failed attempt on Firewall Detected</message>
                <source>
                    <ip reference_id="1" reference_type="source" />
                </source>
                <target>
                    <ip reference_id="1" reference_type="target" />
                </target>
            </alert>
            <prerequisite>
                <predicate type="Recon-Host">
                    <param reference_type="source.ip" />
                    <param reference_type="target.ip" />
                </predicate>
                <predicate type="Recon-Service">
                    <param reference_type="source.ip" />
                    <param reference_type="target.ip" />
                </predicate>
            </prerequisite>
            <consequence>
                <predicate type="Access-Host">
                    <param reference_type="source.ip" />
                    <param reference_type="target.ip" />
                </predicate>
                <predicate type="Access-Host">
                    <param reference_type="target.ip" />
                </predicate>
            </consequence>
        </action>
        <regulation>
            <sequence>
                <filter id="1" />
                <filter id="2" />
            </sequence>
        </regulation>
    </rule>
    