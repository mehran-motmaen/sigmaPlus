<rule id="3905" owner="system" kbid="3905_1" enable="t" ver="1" file_name="">
        <filter_list>
            <filter id="1" name="non standard mail server sending lots of mails" weight="3">
                <source>
                    <ip>!$SMTP_SERVERS,!$MAIL_SERVERS</ip>
                    <port>0-65535</port>
                </source>
                <target>
                    <ip>!$SMTP_SERVERS,!$MAIL_SERVERS</ip>
                    <port>0-65535</port>
                </target>
                <event_list>
                    <event sensor_type="ANY" class_type="">
                        <tag meaning="mechanism">Spam</tag>
                        <tag meaning="event_type">Malware</tag>
                    </event>
                </event_list>
            </filter>
            <filter id="2" name="non standard mail server sending lots of mails" occurrence="2" weight="6" timeout="120">
                <source>
                    <ip reference_id="1" reference_type="source" />
                    <port>0-65535</port>
                </source>
                <target>
                    <ip>!$SMTP_SERVERS,!$MAIL_SERVERS</ip>
                    <port>0-65535</port>
                </target>
                <event_list>
                    <event sensor_type="ANY" class_type="">
                        <tag meaning="mechanism">Spam</tag>
                        <tag meaning="event_type">Malware</tag>
                    </event>
                </event_list>
            </filter>
            <filter id="3" name="non standard mail server sending lots of mails" occurrence="10" weight="15" timeout="300">
                <source>
                    <ip reference_id="1" reference_type="source" />
                    <port>0-65535</port>
                </source>
                <target>
                    <ip>!$SMTP_SERVERS,!$MAIL_SERVERS</ip>
                    <port>0-65535</port>
                </target>
                <event_list>
                    <event sensor_type="ANY" class_type="">
                        <tag meaning="mechanism">Spam</tag>
                        <tag meaning="event_type">Malware</tag>
                    </event>
                </event_list>
            </filter>
            <filter id="4" name="non standard mail server sending lots of mails" occurrence="100" weight="2" timeout="3600">
                <source>
                    <ip reference_id="1" reference_type="source" />
                    <port>0-65535</port>
                </source>
                <target>
                    <ip>!$SMTP_SERVERS,!$MAIL_SERVERS</ip>
                    <port>0-65535</port>
                </target>
                <event_list>
                    <event sensor_type="ANY" class_type="">
                        <tag meaning="mechanism">Spam</tag>
                        <tag meaning="event_type">Malware</tag>
                    </event>
                </event_list>
            </filter>
        </filter_list>
        <action>
            <alert priority="medium" category="Spam">
                <message>Non-MailServer host is sending lots of mail, potential SpamBot detected</message>
                <source>
                    <ip reference_id="1" reference_type="source" />
                </source>
                <target>
                    <ip reference_id="1" reference_type="target" />
                    <ip reference_id="2" reference_type="target" />
                    <ip reference_id="3" reference_type="target" />
                </target>
                <additional_data meaning="MalwareName" reference_id="1" />
                <additional_data meaning="MalwareName" reference_id="2" />
                <additional_data meaning="MalwareName" reference_id="3" />
                <additional_data meaning="MalwareName" reference_id="4" />
                <additional_data meaning="DomainName" reference_id="1" />
                <additional_data meaning="DomainName" reference_id="2" />
                <additional_data meaning="DomainName" reference_id="3" />
                <additional_data meaning="DomainName" reference_id="4" />
            </alert>
            <prerequisite>
                <predicate type="Infection-Malicious">
                    <param reference_type="source.ip" />
                </predicate>
                <predicate type="Hopping">
                    <param reference_type="source.ip" />
                </predicate>
            </prerequisite>
            <consequence>
                <predicate type="Infection-Malicious">
                    <param reference_type="target.ip" />
                </predicate>
                <predicate type="Degrade-Mail">
                    <param reference_type="target.ip" />
                    <param reference_type="target.port" />
                </predicate>
                <predicate type="Hopping" timeout="43200">
                    <param reference_type="target.ip" />
                </predicate>
            </consequence>
        </action>
        <regulation>
            <sequence>
                <filter id="1" />
                <filter id="2" />
                <filter id="3" />
                <filter id="4" />
            </sequence>
        </regulation>
    </rule>
    