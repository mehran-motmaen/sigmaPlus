<rule id="3901" owner="system" enable="f" kbid="3901_1" ver="1" file_name="">
        <filter_list>
            <filter id="1" name="Spyware Aplication Send Data To Spy Server" weight="5">
                <source>
                    <ip>$HOME_NET</ip>
                    <port>0-65535</port>
                </source>
                <target>
                    <ip>$EXTERNAL_NET,$BAD_IP</ip>
                    <port>0-65535</port>
                </target>
                <event_list>
                    <event sensor_type="ANY" class_type="">
                        <tag meaning="mechanism">Spyware</tag>
                        <tag meaning="mechanism_detail">Send Data</tag>
                    </event>
                </event_list>
            </filter>
            <filter id="2" name="Spyware Aplication Sends data To Spy Server" occurrence="5" weight="10" timeout="120">
                <source>
                    <ip reference_id="1" reference_type="source" />
                    <port>0-65535</port>
                </source>
                <target>
                    <ip reference_id="1" reference_type="target" />
                    <port>0-65535</port>
                </target>
                <event_list>
                    <event sensor_type="ANY" class_type="">
                        <tag meaning="mechanism">Spyware</tag>
                        <tag meaning="mechanism_detail">Send Data</tag>
                    </event>
                </event_list>
            </filter>
            <filter id="3" name="Spyware Aplication Sends data To Spy Server" occurrence="5" weight="15" timeout="360">
                <source>
                    <ip reference_id="1" reference_type="source" />
                    <port>0-65535</port>
                </source>
                <target>
                    <ip reference_id="1" reference_type="target" />
                    <port>0-65535</port>
                </target>
                <event_list>
                    <event sensor_type="ANY" class_type="">
                        <tag meaning="mechanism">Spyware</tag>
                        <tag meaning="mechanism_detail">Send Data</tag>
                    </event>
                </event_list>
            </filter>
        </filter_list>
        <action>
            <alert priority="high" category="Spyware">
                <message>Spyware Aplication Send Data To Spy Server</message>
                <source>
                    <ip reference_id="1" reference_type="source" />
                </source>
                <target>
                    <ip reference_id="1" reference_type="target" />
                </target>
                <additional_data meaning="MalwareName" reference_id="1" />
                <additional_data meaning="MalwareName" reference_id="2" />
                <additional_data meaning="MalwareName" reference_id="3" />
            </alert>
            <prerequisite>
                <predicate type="Infection-Malicious">
                    <param reference_type="source.ip" />
                </predicate>
                <predicate type="Hopping">
                    <param reference_type="source.ip" />
                </predicate>
            </prerequisite>
            <consequence>
                <predicate type="Spyware-Host">
                    <param reference_type="source.ip" />
                </predicate>
                <predicate type="Trojan-Server">
                    <param reference_type="target.ip" />
                </predicate>
                <predicate type="Hopping" timeout="43200">
                    <param reference_type="target.ip" />
                </predicate>
            </consequence>
        </action>
        <regulation>
            <sequence>
                <filter id="1" />
                <filter id="2" />
                <filter id="3" />
            </sequence>
        </regulation>
    </rule>
    