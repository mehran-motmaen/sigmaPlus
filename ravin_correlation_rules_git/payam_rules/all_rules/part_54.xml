<rule id="3506" owner="system" kbid="3506_1" enable="t" ver="1" file_name="">
        <filter_list>
            <filter id="1" name="Riskware detected" weight="5">
                <source>
                    <ip location="ANY" />
                    <port>0-65535</port>
                </source>
                <target>
                    <ip location="ANY" />
                    <port>0-65535</port>
                </target>
                <event_list>
                    <event sensor_type="ANY" class_type="">
                        <tag meaning="mechanism">Riskware</tag>
                    </event>
                </event_list>
            </filter>
            <filter id="2" name="Riskware detected" occurrence="5" weight="5" timeout="60">
                <source>
                    <ip reference_id="1" reference_type="source" />
                    <port>0-65535</port>
                </source>
                <target>
                    <ip reference_id="1" reference_type="target" />
                    <port>0-65535</port>
                </target>
                <event_list>
                    <event sensor_type="ANY" class_type="">
                        <tag meaning="mechanism">Riskware</tag>
                    </event>
                </event_list>
            </filter>
            <filter id="3" name="Riskware detected" occurrence="10" weight="1" timeout="3600">
                <source>
                    <ip reference_id="1" reference_type="source" />
                    <port>0-65535</port>
                </source>
                <target>
                    <ip reference_id="1" reference_type="target" />
                    <port>0-65535</port>
                </target>
                <event_list>
                    <event sensor_type="ANY" class_type="">
                        <tag meaning="mechanism">Riskware</tag>
                    </event>
                </event_list>
            </filter>
        </filter_list>
        <action>
            <alert priority="medium" category="Trojan">
                <message>Riskware Detected</message>
                <source>
                    <ip reference_id="1" reference_type="source" />
                </source>
                <target>
                    <ip reference_id="1" reference_type="target" />
                </target>
                <additional_data meaning="MalwareName" reference_id="1" />
                <additional_data meaning="MalwareName" reference_id="2" />
                <additional_data meaning="MalwareName" reference_id="3" />
            </alert>
            <prerequisite>
                <predicate type="Trojan-Host">
                    <param reference_type="source.ip" />
                </predicate>
                <predicate type="Trojan-Server">
                    <param reference_type="target.ip" />
                </predicate>
                <predicate type="Hopping">
                    <param reference_type="source.ip" />
                </predicate>
            </prerequisite>
            <consequence>
                <predicate type="Trojan-Host">
                    <param reference_type="source.ip" />
                </predicate>
                <predicate type="Trojan-Server">
                    <param reference_type="target.ip" />
                </predicate>
                <predicate type="Hopping" timeout="43200">
                    <param reference_type="target.ip" />
                </predicate>
            </consequence>
        </action>
        <regulation>
            <sequence>
                <filter id="1" />
                <filter id="2" />
                <filter id="3" />
            </sequence>
        </regulation>
    </rule>
    