<rule id="3500" owner="system" kbid="3500_1" enable="t" ver="1" file_name="">
        <filter_list>
            <filter id="1" name="Botnet Server try to communicate to a Botspot client" weight="3">
                <source>
                    <ip>$EXTERNAL_NET</ip>
                    <port>0-65535</port>
                </source>
                <target>
                    <ip>$HOME_NET</ip>
                    <port>0-65535</port>
                </target>
                <event_list>
                    <event sensor_type="ANY" class_type="">
                        <tag meaning="mechanism">Botnet</tag>
                    </event>
                </event_list>
            </filter>
            <filter id="2" name="BotSpot client respond to CnC Bot Server" occurrence="1" weight="20" timeout="120">
                <source>
                    <ip reference_id="1" reference_type="target" />
                    <port>0-65535</port>
                </source>
                <target>
                    <ip reference_id="1" reference_type="source" />
                    <port>0-65535</port>
                </target>
                <flag_list>
                    <flag>sticky</flag>
                </flag_list>
                <event_list>
                    <event sensor_type="ANY" class_type="">
                        <tag meaning="mechanism">Botnet</tag>
                    </event>
                </event_list>
            </filter>
            <filter id="3" name="Botnet Server try to communicate to a Botspot client" occurrence="3" weight="10" timeout="360">
                <source>
                    <ip reference_id="1" reference_type="source" />
                    <port>0-65535</port>
                </source>
                <target>
                    <ip>$HOME_NET</ip>
                    <port>0-65535</port>
                </target>
                <flag_list>
                    <flag>sticky</flag>
                </flag_list>
                <event_list>
                    <event sensor_type="ANY" class_type="">
                        <tag meaning="mechanism">Botnet</tag>
                    </event>
                </event_list>
                <diversity>
                    <param reference_type="target.ip" />
                </diversity>
            </filter>
            <filter id="4" name="BotSpot client respond to CnC Bot Server" occurrence="10" weight="10" timeout="120">
                <source>
                    <ip>$HOME_NET</ip>
                    <port>0-65535</port>
                </source>
                <target>
                    <ip reference_id="1" reference_type="source" />
                    <port>0-65535</port>
                </target>
                <flag_list>
                    <flag>sticky</flag>
                </flag_list>
                <event_list>
                    <event sensor_type="ANY" class_type="">
                        <tag meaning="mechanism">Botnet</tag>
                    </event>
                </event_list>
                <diversity>
                    <param reference_type="source.ip" />
                </diversity>
            </filter>
            <filter id="5" name="Botnet Server try to communicate to a Botspot client" occurrence="100" weight="5" timeout="360">
                <source>
                    <ip reference_id="1" reference_type="source" />
                    <port>0-65535</port>
                </source>
                <target>
                    <ip>$HOME_NET</ip>
                    <port>0-65535</port>
                </target>
                <flag_list>
                    <flag>sticky</flag>
                </flag_list>
                <event_list>
                    <event sensor_type="ANY" class_type="">
                        <tag meaning="mechanism">Botnet</tag>
                    </event>
                </event_list>
                <diversity>
                    <param reference_type="target.ip" />
                </diversity>
            </filter>
        </filter_list>
        <action>
            <alert priority="high" category="Botnet">
                <message>Botnet CnC communication detected</message>
                <source>
                    <ip reference_id="1" reference_type="source" />
                </source>
                <target>
                    <ip reference_id="1" reference_type="target" />
                    <ip reference_id="3" reference_type="target" />
                    <ip reference_id="4" reference_type="source" />
                    <ip reference_id="5" reference_type="target" />
                </target>
                <additional_data meaning="MalwareName" reference_id="1" />
                <additional_data meaning="MalwareName" reference_id="2" />
                <additional_data meaning="MalwareName" reference_id="3" />
                <additional_data meaning="MalwareName" reference_id="4" />
                <additional_data meaning="MalwareName" reference_id="5" />
            </alert>
            <prerequisite>
                <predicate type="Hopping">
                    <param reference_type="source.ip" />
                </predicate>
                <predicate type="Access-Host">
                    <param reference_type="target.ip" />
                </predicate>
                <predicate type="Trojan-Host">
                    <param reference_type="target.ip" />
                </predicate>
                <predicate type="BotSpot-Host">
                    <param reference_type="target.ip" />
                </predicate>
                <predicate type="Infection-Malicious">
                    <param reference_type="target.ip" />
                </predicate>
                <predicate type="CnC-Server">
                    <param reference_type="source.ip" />
                </predicate>
            </prerequisite>
            <consequence>
                <predicate type="CnC-Server" timeout="3600">
                    <param reference_type="source.ip" />
                </predicate>
                <predicate type="BotSpot-Host" timeout="3600">
                    <param reference_type="target.ip" />
                </predicate>
                <predicate type="Hopping" timeout="43200">
                    <param reference_type="target.ip" />
                </predicate>
            </consequence>
        </action>
        <regulation>
            <sequence>
                <filter id="1" />
                <group>
                    <filter id="2" />
                    <filter id="4" />
                </group>
                <group>
                    <filter id="3" />
                    <filter id="5" />
                </group>
            </sequence>
        </regulation>
    </rule>
    