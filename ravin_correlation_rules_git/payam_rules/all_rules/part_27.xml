<rule enable="t" id="12019" owner="system" ver="1" kbid="12019_1" file_name="">
        <filter_list>
            <filter id="1" name="Traffic from/to unknown PLC/WinCC agents detected" weight="15">
                <source>
                    <ip>!($PLC_AGENTS,$WINCC_AGENTS)</ip>
                    <port>0-65535</port>
                </source>
                <target>
                    <ip>!($PLC_AGENTS,$WINCC_AGENTS)</ip>
                    <port>102</port>
                </target>
                <event_list>
                    <event sensor_type="450" />
                </event_list>
            </filter>
        </filter_list>
        <action>
            <alert category="SecurityPolicyViolation" priority="high">
                <message>Traffic from/to unknown PLC/WinCC agents detected</message>
                <source>
                    <ip reference_id="1" reference_type="source" />
                </source>
                <target>
                    <ip reference_id="1" reference_type="target" />
                </target>
            </alert>
        </action>
        <regulation>
            <sequence>
                <filter id="1" />
            </sequence>
        </regulation>
    </rule>
    